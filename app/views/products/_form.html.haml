%section.grid_4
  .block-border
    #simple_form.block-content.form
      %h1 Information Of New Product
      
      %fieldset.grey-bg.required
        %p
          = form_for @product do |f|
            - if @product.errors.any?
              #error_explanation
                %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
                %ul
                  - @product.errors.full_messages.each do |msg|
                    %li= msg
          
            
            .section
              = f.label :name, :class =>"first-label"
              = f.text_field :name
            
              = f.label :description
              = f.text_area :description
            
              = f.label :cost
              = f.text_field :cost
            
              = f.label :price
              = f.text_field :price
             
              = f.label :manufacture
              = f.text_field :manufacture
            .section 
              = f.label :manufacture_part
              = f.text_field :manufacture_part
            
              = f.label :serial_numbers
              = f.text_field :serial_numbers
            
              = f.label :vendor_perferred
              = f.text_field :vendor_perferred
            
              = f.label :vendor_other
              = f.text_field :vendor_other
            
              = f.label :type
              = f.text_field :product_type, :placeholder =>"Standard or Soon or Overdue"
             
              = f.label :units
              = f.text_field :units
            .section.last-child
              = f.label :tax
              = f.text_field :tax
            
              = f.label :stock_on_hand
              = f.text_field :stock_on_hand
            
              = f.label :stock_location
              = f.text_field :stock_location
            
              = f.label :references_recent_orders
              = f.text_field :references_recent_orders
            
              = f.label :references_companies_who_own
              = f.text_field :references_companies_who_own
            .clear
            = f.submit :class =>"submit-button"
            = link_to 'Back', products_path
